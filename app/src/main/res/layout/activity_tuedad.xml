<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tuedad">

    <LinearLayout
        android:layout_width="388dp"
        android:layout_height="900dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorBackgroundFloating"
            android:text="Deseas Conocer Tu Edad?"
            android:textColorLink="@android:color/holo_purple" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#37083b"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnCalcularEdad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="btnCalcularEdad"
                android:text="Calcular Edad" />


        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>